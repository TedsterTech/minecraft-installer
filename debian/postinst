#!/bin/sh
# postinst script for minecraft-installer
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        MINECRAFT_JAR=`tempfile -p minecraft -s .jar`
	MINECRAFT_ICON=`tempfile -p favicon -s .png`
        curl http://www.minecraft.net/download/Minecraft.jar >$MINECRAFT_JAR
	curl http://www.minecraft.net/favicon.png >$MINECRAFT_ICON
        mv $MINECRAFT_JAR /usr/share/minecraft-installer/Minecraft.jar
	convert $MINECRAFT_ICON -resize 32x32 /usr/share/pixmaps/minecraft-installer.xpm
	mv $MINECRAFT_ICON /usr/share/pixmaps/minecraft-installer.png
	chmod 0644 /usr/share/minecraft-installer/Minecraft.jar
	chmod 0644 /usr/share/pixmaps/minecraft-installer.xpm
	chmod 0644 /usr/share/pixmaps/minecraft-installer.png
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
