#!/bin/sh

while [[ $1 = -* ]]; do
	case "$1" in
		-h|-help|--help)
			echo "unhelpful"
			exit
		;;
		-p|-path|--path)
			path="$2"
			shift 2
		;;
	esac
done

if [ ! "$path" ]; then
	path="$HOME/.minecraft/server"
if [ ! -d "$path" ]; then
	mkdir -p "$path" || exit 1
fi

cd "$path" || exit 1
exec /usr/bin/java -Xmx1024M -Xms512M -jar \
			/usr/share/minecraft-installer/minecraft_server.jar \
			nogui ${1+"$@"}
